    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21",
    "npm-check-updates": "^16.7.10",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
